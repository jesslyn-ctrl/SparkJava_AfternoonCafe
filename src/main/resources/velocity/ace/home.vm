#parse("/velocity/layout.vm")
#@mainLayout()
    <!--CSS-->
    <link rel="stylesheet" type="text/css" href="/css/shome.css">
    <!--Headings-->
    <div class="landing">
        <div class="home-wrap">
            <div class="home-inner">
                <!--Carousel(Image Slider)-->
                <div id="slides" class="carousel slide" data-ride="carousel">
                    <ul class="carousel-indicators">
                        <li data-target="#slides" data-slide-to="0" class="active"></li>
                        <li data-target="#slides" data-slide-to="1"></li>
                        <li data-target="#slides" data-slide-to="2"></li>
                    </ul>
                    <div class="carousel-inner">
                        <div class="carousel-item active">
                            <img src="/images/Cappuccino_car.png" width="100%">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/Green_Tea_Latte_car.png" width="100%">
                        </div>
                        <div class="carousel-item">
                            <img src="/images/Hot_Chocolate_car.png" width="100%">
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div><br><br>

    <!--Content-->
    <div class="container banner text-center">
        <div class="row">
            <div class="col-md-6">
                <img src="/images/ppl.png" width="350px" height="280px">
            </div>
            <div class="info">
                <h1>We Made Your Desired Recipe<br>Order Now!</h1>
                <a href="$WebPath.getMENU()" class="order-btn">Order Now</a>
            </div>
        </div>
    </div>

    <div class="container banner text-center">
        <h1>Food tastes better when you eat it with people you love</h1>
        <h3>All kinds of drinks and desserts are available here!</h3>
        <div class="row">
            <div class="col-md-6">
                <div class="tiramisu_rec">
                    <img src="/images/tiramisu_rec.jpg">
                    <h4>Tiramisu</h4>
                    <p>Italian kind of cheese cake with a sprinkling<br>of cocoa powder that is very appetizing.</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="greentea_rec">
                    <img src="/images/green_tea_rec.jpg">
                    <h4>Green Tea Latte</h4>
                    <p>Warm green tea combined with <i>creamy</i> milk<br>that has an incomparable taste.</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="waffle_rec">
                    <img src="/images/waffle_rec.jpg">
                    <h4>Waffle</h4>
                    <p>Savory, cripsy, and creamy Waffle dough<br>that will color your days and boost your mood up!</p>
                </div>
            </div>
            <div class="col-md-6">
                <div class="pico_rec">
                    <img src="/images/piccolo_rec.jpg">
                    <h4>Piccolo Latte</h4>
                    <p>Latte with creamer as its garnish that's not<br>will be bored to be seen, like when looking at you..</p>
                </div>
            </div>
        </div>
    </div>
#end